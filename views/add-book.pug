html
  head
    title Add a Book
  body
    h1 Add a Book
    form(action='/books', method='post')
      label(for='id') ID:
      input(type='number', id='id', name='id', required)
      br
      label(for='name') Name:
      input(type='text', id='name', name='name', required)
      br
      button(type='submit') Add Book
    p
      a(href='/books') Back to Book List
